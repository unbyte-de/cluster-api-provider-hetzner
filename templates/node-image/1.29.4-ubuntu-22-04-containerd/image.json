{
  "variables": {
    "hcloud_token": "{{env `HCLOUD_TOKEN`}}",
    "scripts": "{{template_dir}}/scripts",
    "os": "ubuntu-22.04",
    "kubernetes_version": "1.30.7",
    "arch": "amd64",
    "image-name": "caph-{{user `kubernetes_version`}}-{{user `os`}}-{{user `arch`}}-containerd",
    "version": "{{isotime \"2006-01-02-1504\"}}",
    "containerd_version": "1.7.24"
  },
  "sensitive-variables": [
    "hcloud_token"
  ],
  "builders": [
    {
      "type": "hcloud",
      "token": "{{user `hcloud_token`}}",
      "image": "{{user `os`}}",
      "location": "fsn1",
      "server_type": "cx22",
      "ssh_username": "root",
      "snapshot_name": "{{user `image-name`}}-{{user `version`}}",
      "snapshot_labels": {
        "caph-image-name": "{{user `image-name`}}-{{user `version`}}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "environment_vars": [
        "PACKER_OS_IMAGE={{user `os`}}",
        "PACKER_ARCH={{user `arch`}}",
        "KUBERNETES_VERSION={{user `kubernetes_version`}}",
        "CONTAINERD={{user `containerd_version`}}"
      ],
      "scripts": [
        "{{user `scripts`}}/base.sh",
        "{{user `scripts`}}/cilium-requirements.sh",
        "{{user `scripts`}}/cri.sh",
        "{{user `scripts`}}/kubernetes.sh",
        "{{user `scripts`}}/cleanup.sh"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "output": "manifest.json",
        "strip_path": false,
        "type": "manifest",
        "custom_data": {
          "snapshot_label": "{{user `image-name`}}-{{user `version`}}"
        }
      }
    ]
  ]
}
